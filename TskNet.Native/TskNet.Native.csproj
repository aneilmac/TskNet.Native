<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>
    <PropertyGroup>
        <_Year>$([System.DateTime]::Now.ToString('yyyy'))</_Year>
        <Authors>aneilmac</Authors>
        <Copyright>Copyright © 2026-$(_Year) $(Authors)</Copyright>
        <PackageTags>Sleuthkit;libtsk</PackageTags>
        <Description>libtsk Native library</Description>
        <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <RepositoryUrl>https://github.com/aneilmac/TskNet.Native</RepositoryUrl>
        <PackageProjectUrl>https://github.com/aneilmac/TskNet.Native</PackageProjectUrl>
        <RepositoryType>git</RepositoryType>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="GitVersion.MsBuild">
            <PrivateAssets>All</PrivateAssets>
        </PackageReference>
    </ItemGroup>
    <ItemGroup>
        <None Include="$(ROOTDIR)README.md" Pack="true" PackagePath="\"/>
        <None Include="$(ROOTDIR)LICENSE.md" Pack="true" PackagePath="\"/>
        <None Include="$(LIBDIR)*.so" Pack="true" PackagePath="runtimes\linux-x64\native">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
            <Visible>false</Visible>
            <PackageCopyToOutput>true</PackageCopyToOutput>
            <TargetPath>runtimes\linux-x64\native\%(Filename)%(Extension)</TargetPath>
        </None>
        <None Include="$(ROTODIR)licenses" Pack="true" PackagePath="licenses">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
            <Visible>false</Visible>
            <PackageCopyToOutput>true</PackageCopyToOutput>
            <TargetPath>licenses\%(Filename)%(Extension)</TargetPath>
        </None>
    </ItemGroup>
</Project>
